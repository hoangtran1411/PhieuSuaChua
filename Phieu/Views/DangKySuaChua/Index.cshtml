@{
    ViewData["Title"] = "Dang Ky Sua Chua";
    Layout = "_Layout";
}
@*@ViewBag.Title*@
<div class="card">
    <div class="card-body">
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item active">Đăng ký sửa chữa</li>

            </ol>
        </nav>

        <section class="section">

            <div class="row">
                <div class="col-lg-12">


                    <!-- Vertical Form -->
                    <form class="row g-3" id="DangKySuaChua">
                        <div class="col-3">
                            <label for="inputNanme4" class="form-label">MÃ NHÂN VIÊN</label>
                            <input type="text" class="form-control" id="MaNV" placeholder="MÃ NHÂN VIÊN"  onblur="CheckNV()" required>
                        </div>
                        <div class="col-6">
                            <label for="inputEmail4" class="form-label">HỌ VÀ TÊN</label>
                            <input type="email" class="form-control" id="Hoten" placeholder="HỌ VÀ TÊN" disabled>
                        </div>
                        <div class="col-3">
                            <label for="inputPassword4" class="form-label">ĐƠN VỊ</label>
                            <input type="text" class="form-control" id="Donvi" placeholder="ĐƠN VỊ" disabled>
                        </div>
                        <div class="col-8">
                            <label for="inputAddress" class="form-label">CHỨC DANH</label>
                            <input type="text" class="form-control" id="Chucdanh" placeholder="CHỨC DANH" disabled>
                        </div>
                        <div class="col-4">
                            <label for="inputAddress" class="form-label">SỐ ĐIỆN THOẠI</label>
                            <input type="text" class="form-control" id="Sdt" placeholder="SỐ ĐIỆN THOẠI NỘI BỘ " required>
                        </div>
                        <div class="col-4">
                            <label for="inputAddress" class="form-label">TÊN MÁY TÍNH</label>
                            <input type="text" class="form-control" id="Tenmaytinh" placeholder="TÊN MÁY TÍNH" onblur="CheckThietBi()" required>
                        </div>
                        <div class="col-4">
                            <label for="inputAddress" class="form-label">USER NAME</label>
                            <input type="text" class="form-control" id="Username" placeholder="TÊN ĐĂNG NHẬP MÁY TÍNH" required>
                        </div>
                        <div class="col-4">
                            <label for="inputAddress" class="form-label">PASSWORD</label>
                            <input type="text" class="form-control" id="Password" placeholder="NHẬP PASSWORD" required>
                        </div>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">THIẾT BỊ KHÁC</label>
                            <input type="text" class="form-control" id="Thietbikhac" placeholder="VD: MÁY IN, SCAN...." onblur="CheckThietBi()">
                        </div>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">MÔ TẢ TÌNH TRẠNG</label>
                            <input type="text" class="form-control" id="Tinhtrang" placeholder="KHÔNG MỞ NGUỒN ĐƯỢC" required>
                        </div>
                        <div class="col-12">
                            <label for="inputAddress" class="form-label">GHI CHÚ</label>
                            <input type="text" class="form-control" id="Ghichu" placeholder="CẦN HỖ TRỢ THÊM..." >
                        </div>

                    </form><!-- Vertical Form -->

                    <p>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" onclick="Success('MaNV','Sdt','Tenmaytinh','Username','Password','Thietbikhac','Tinhtrang','Ghichu')">ĐĂNG KÝ</button>
                            <button type="reset" onclick="ResetForm()" class="btn btn-danger">CANCEL</button>
                        </div>
                    </p>

                   

                </div>
            </div>

        </section>
    </div>
</div>

@section Scripts {
    <script src="~/modelscript/modelscript.js"></script>
}